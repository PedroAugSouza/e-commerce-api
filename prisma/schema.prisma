generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  uuid        String   @id
  name        String
  price       Float
  category    Category
  image       String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum Category {
  DRINK
  FOOD
}

model User {
  uuid      String   @id
  username  String
  email     String   @unique
  password  String
  role      Role
  createdAt DateTime
  updatedAt DateTime
}

enum Role {
  ADMIN
  COMMOM
}
